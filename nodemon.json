{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules",
        "static/**/*",
        "static/*.json"
    ],
    "verbose": true,
    "execMap": {
        "ts": "node --require ts-node/register"
    },
    "watch": [
        "src/"
    ],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}